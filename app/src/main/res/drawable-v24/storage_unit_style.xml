<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@color/cardview_shadow_start_color"></item>
    <item>
        <shape>
            <gradient android:startColor="#c0000000"  android:endColor="#c0000000" android:angle="90" /><!--背景颜色渐变 angle为渐变角度-->
            <solid android:color="@color/white" /><!-- 背景填充颜色 -->
            <stroke android:width="1dp" android:color="@color/cardview_shadow_start_color" /><!-- 描边，边框宽度、颜色 -->
            <padding android:left="0.5dp" android:top="0.5dp" android:right="0.5dp" android:bottom="0.5dp" /><!-- 四周留出来的空白 -->
        </shape>
    </item>
</selector>