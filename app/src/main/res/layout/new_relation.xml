<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <include
            android:id="@+id/include"
            layout="@layout/title_bar" />

    <EditText
        android:id="@+id/relation_name"
        android:layout_width="225dp"
        android:layout_height="51dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:hint="请输入关系名称"
        android:paddingLeft="20dp"
        android:textSize="18dp"
        android:theme="@style/MyEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.709"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="73dp"
        android:layout_height="42dp"
        android:layout_marginTop="52dp"
        android:text="关系头像"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/photoButton"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relation_name_hint" />

    <ImageButton
        android:id="@+id/photoButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="52dp"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="fitXY"
        android:src="@mipmap/takephoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relation_name"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
            android:id="@+id/relation_submit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="320dp"
            android:backgroundTint="@color/theme_color"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/photoButton"
            tools:layout_editor_absoluteX="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/relation_name_hint"
        android:layout_width="76dp"
        android:layout_height="36dp"
        android:layout_marginTop="72dp"
        android:text="关系名称"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/relation_name"
        app:layout_constraintHorizontal_bias="0.708"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

</androidx.constraintlayout.widget.ConstraintLayout>